{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/JerilynFranz/python-simplebench/main/schemas/v1/report-log-entry.json",
    "title": "Log Entry Schema (V1)",
    "description": "SimpleBench Report Log Entry Schema (V1)",
    "type": "object",
    "properties": {
        "version": {
            "title": "Log Version",
            "description": "Schema version for the log entry",
            "type": "integer",
            "const": 1
        },
        "type": {
            "title": "Type",
            "description": "Type of the log entry",
            "type": "string",
            "const": "ReportLogEntry::V1"
        },
        "timestamp": {
            "title": "Timestamp",
            "description": "UTC timestamp of the report as an ISO 8601 string",
            "type": "string",
            "format": "date-time",
            "examples": ["2024-01-15T12:34:56Z"]
        },
        "benchmark": {
            "$ref": "benchmark-info.json"
        },
        "report": {
            "$ref": "report-info.json"
        },
        "vcs": {
            "$ref": "vcs-info.json"
        },
        "machine_info": {
            "title": "Machine Information",
            "description": "Full machine information associated with the report.",
            "$ref": "machine-info.json"
        },
        "machine_hash_id": {
            "title": "Machine Hash ID",
            "description": "A hash ID that references previously recorded machine information.",
            "type": "string"
        }
    },
    "required": [
        "version",
        "type",
        "timestamp",
        "benchmark",
        "report"
    ],
    "oneOf": [
        {
            "required": [
                "machine_info"
            ]
        },
        {
            "required": [
                "machine_hash_id"
            ]
        }
    ],
    "additionalProperties": false
}